resource "opennebula_virtual_network" "{{ tn_id }}-{{ one_vxlan_name }}" {

  name            = "{{ tn_id }}-{{ one_vxlan_name }}"
  permissions     = "660"
  group           = "{{ one_group }}"
  physical_device = "{{ one_vxlan_physical_device }}"
  type            = "vxlan"
  automatic_vlan_id = true
  mtu             = {{ one_vxlan_mtu }}
  guest_mtu       = {{ one_vxlan_guest_mtu }}
{% if one_vxlan_dns is defined and one_vxlan_dns %}
  dns             = "{{ one_vxlan_dns }}"
{% endif %}
{% if one_vxlan_gw is defined and one_vxlan_gw %}
  gateway         = "{{ one_vxlan_gw }}"
{% endif %}
  security_groups = {{ one_vxlan_security_groups }}
  cluster_ids = {{ site_clusters }}
  network_mask = "{{ one_vxlan_netmask }}"

  template_section {
   name = "{{ one_vxlan_name }}"
   elements = {
      TN_ID = "{{ tn_id }}"
   }
  }
}

resource "opennebula_virtual_network_address_range" "{{ tn_id }}-{{ one_vxlan_name }}" {
  virtual_network_id = opennebula_virtual_network.{{ tn_id }}-{{ one_vxlan_name }}.id
  ar_type            = "IP4"
  size               = {{ one_vxlan_address_size }}
  ip4                = "{{ one_vxlan_first_ip }}"
}

output "{{ one_vxlan_name }}-vxlan_id" {
  description = "OpenNebula Network ID"
  value       = opennebula_virtual_network.{{ tn_id }}-{{ one_vxlan_name }}.id
}
